<div class="item col-md-4 col-xs-12" style="padding: 3px;">
  <div class="media" style="background-color: white; border: solid #EFEFEF 1px; padding: 5px;" >
    <span class="pull-left" style="margin: 5px;">
      <%= image_tag pickup_tweet.tweet_user_image_url, class: 'media-object img-rounded', width: 48, height: 48 %>
    </span>
    <div class="media-body">
      <div class="media-hedding">
        <%= pickup_tweet.tweet_user_name %>
        <% if user_signed_in? && current_user.admin? %> 
          <button id="remove_pickup_tweet_user_<%= pickup_tweet.id %>" type="button" class="removePickupTweetUser btn btn-default btn-xs">
            <span class="star glyphicon glyphicon-remove-circle"></span>
          </button>
        <% end %>
      </div>
      <div class="media">
        <%= emphasize_keyword(pickup_tweet.text, pickup_tweet.keyword) %>
        <span class="pull-right">
          <button id="like_pickup_tweet_<%= pickup_tweet.id %>" type="button" class="likePickupTweet btn btn-default">
            <% if user_signed_in? && pickup_tweet.is_liked_by?(current_user) %>
              <span class="star glyphicon glyphicon-star"></span>
            <% else %>
              <span class="star glyphicon glyphicon-star-empty"></span> 
            <% end %>
            <span class="value"><%= pickup_tweet.like_number %><span>
          </button>
        </span>
      </div>
    </div>
  </div>
</div>
